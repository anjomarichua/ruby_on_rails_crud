<div><h1>Adnat</h1></div>
<div>
	<h4> 
		Logged in as <% if current_user %>
		<%= current_user.name %>
		<% end %>
		<%= link_to 'Logout', logout_url , data: { confirm: 'Are you sure' }, method: :delete %>
	</h4>
</div>
<div>
	<h2>
		Edit Organisation
	</h2>
</div>
<%= form_for @organisation, url: {action: :update} do |f| %>   
   <h3>Add a Product</h3>   
 <%= "<div>#{@organisation.errors.full_messages.first}</div>".html_safe if @organisation.errors.any? %>   
    <p>   
  
     <div>   
            <label>Product Name</label>   
            <%= f.text_field :name %>   
     </div>   
  
     <div>   
            <label>Price</label>   
            <%= f.text_field :hourly_rate %>   
     </div>    
  
      </p>   
   <div>   
      <%= link_to 'Back', { controller: 'organisations', action: 'show'} %>   
      <%= f.submit 'Update' %> 
      <%= link_to 'Delete', organisations_path(f), method: :delete %>    
    </div>   
<% end %>   

	

</div>    