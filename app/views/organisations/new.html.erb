<div><h1>Adnat</h1></div>
<div>
	<h4> 
		Logged in as <% if current_user %>
		<%= current_user.name %>
		<% end %>
		<%= link_to 'Logout', logout_url , data: { confirm: 'Are you sure' }, method: :delete %>
	</h4>
</div>
<p>
	You aren't a member of any organisations.<br/>
	Join an existing one or create a new one.
</p>
<div>
	<h2>Organisations</h2>
	<% if @organisations %>
		<ul>
			<% @organisations.each do |org| %>   
			<li>
				<%= org.name %>    
				<%= link_to 'Join', organisation_path(org), method: :join %>  
				<%= link_to 'Edit', edit_organisation_path(org) %>      
				<%= link_to 'Delete'%>  
			</li>
			<% end %>   
		<ul>
	<% end %>  
</div>   
<div>
	<h2>Create Organisation</h2>
		<%= form_for @organisation, url: {action: :create} do |f| %>   
			<div>   
				<p>   
					<%= "<div>#{@organisation.errors.full_messages.first}</div>".html_safe if @organisation.errors.any? %>   
					<div>   
						<label>Name</label>   
						<%= f.text_field :name, :required => "true" %>   
					</div>   
					
					<div>   
						<label>Hourly Rate$</label>   
						<%= f.number_field :hourly_rate, :step => "any", :required => "true" %>   
					</div>   
					 
				</p>   
			</div>   
			<% end %>   
		</div>
</div>    